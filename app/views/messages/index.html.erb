<div class="row">
    <div class="col-md-12">

        <div class="panel panel-default" >
            <div class="panel-heading">
                メッセージ一覧
            </div>

            <div class="panel-body">
                <% @messages.each do |message | %>
                <div class="col-sm-3">
                    <span class="label label-info"><%= message.name %>(<%= message.age %>)</span>
                </div>
                <div class="col-sm-7">
                    <%= message.body %>
                </div>
                <div class="col-sm-2">
                    <small>
                        (<%= link_to "編集", edit_message_path(message) %> | 
                        <%= link_to "削除", message, method: :delete, data: {confirm: '削除してもよろしいですか？'} %>
                        )
                    </small>
                </div>
                <% end %>
            </div>
        </div>

        <% # 部分テンプレートを読み込んでいる %>
        <%= render 'form' %>


    </div>
</div>
