<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default" >
                <div class="panel-heading">
                    メッセージ一覧
                </div>
                
                <div class="panel-body">
                    <% @messages.each do |message | %>
                    <div class="col-sm-2">
                        <span class="label label-info"><%= message.name %></span>
                    </div>
                    <div class="col-sm-10">
                        <%= message.body %>
                    </div>
                    <% end %>
                </div>
            </div>
            
            <% # 部分テンプレートを読み込んでいる %>
            <%= render 'form' %>


        </div>
    </div>
</div>