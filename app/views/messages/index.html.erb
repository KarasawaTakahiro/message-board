<div class="container">
    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default" >
                <div class="panel-heading">
                    メッセージ一覧
                </div>
                
                <div class="panel-body">
                    <% @messages.each do |message | %>
                    <div class="col-sm-2">
                        <span class="label label-info"><%= message.name %></span>
                    </div>
                    <div class="col-sm-10">
                        <%= message.body %>
                    </div>
                    <% end %>
                </div>
            </div>
            
            <%= form_for(@message, html: {class:"form-horizontal"}) do |f| %>
                <% if @message.errors.present? %>
                    <div class="alert alert-danger">
                        <%= alert %>
                        <ul>
                            <% @message.errors.full_messages.each do |full_messages| %>
                                <li>
                                    <%= full_messages %>
                                </li>
                            <% end %>
                        </ul>
                    </div>
                <% end %>
                <div class="form-group">
                    <label class="col-md-3" for="message_name">名前：</label>
                    <div class="col-md-9">
                        <%= f.text_field :name, class:"form-control" %>
                    </div>
                </div>
            
                <div class="form-group">
                    <label class="col-md-3" for="message_body">内容：</label>
                    <div class="col-md-9">
                        <%= f.text_area :body, class:"form-control", rows:"3" %>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-9">
                        <%= f.submit "送信", class:"btn btn-sm btn-primary" %>
                    </div>
                </div>
            <% end %>

        </div>
    </div>
</div>